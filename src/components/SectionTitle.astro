---
export interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  class?: string;
}

const { 
  title, 
  subtitle, 
  centered = true, 
  class: className = '' 
} = Astro.props;

const alignmentClass = centered ? 'text-center' : 'text-left';
const classes = `${alignmentClass} ${className}`.trim();
---

<div class={classes}>
  <h2 class="text-3xl md:text-4xl font-prosto text-dark mb-4">
    {title}
  </h2>
  {subtitle && (
    <p class="text-lg text-gray max-w-2xl mx-auto">
      {subtitle}
    </p>
  )}
</div>